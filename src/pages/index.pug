				img.funds-distribution__diagram(src="images/funds.png", alt="Funds diagram")
		section.section.road#road
			h2.title.section__title.road__title Road map
			div.road__container
				div.road__stage
					div.road__stage-container
						span.road__stage-name ICOVoting 2.0
						span.road__stage-date II quarter of 2018 -
						span.road__stage-eth 150 ETH
					svg.road__right-icon
						use(xlink:href="images/sprite.svg#icon-right-arrow")
					svg.road__down-icon
